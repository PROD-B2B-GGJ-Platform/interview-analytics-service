# Interview Analytics Service - Environment Variables

# Service Configuration
SERVICE_NAME=interview-analytics-service
SERVICE_PORT=8125
SERVICE_VERSION=1.0.0

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_interview_analytics_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=6

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Analytics Configuration
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_COMPARATIVE_ANALYSIS=true
AGGREGATION_INTERVAL_MINUTES=5

# Export Settings
ENABLE_PDF_EXPORT=true
ENABLE_EXCEL_EXPORT=true
ENABLE_POWERPOINT_EXPORT=true
REPORT_GENERATION_QUEUE=analytics-reports

# ML Model Settings
ATTRITION_PREDICTION_MODEL=/models/attrition_model.pkl
PERFORMANCE_PREDICTION_MODEL=/models/performance_model.pkl

